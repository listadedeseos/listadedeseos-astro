---
import Logo from "../svg/Logo.astro";
import { Icon } from "astro-icon/components";

interface Props {}
const {} = Astro.props;
---

<nav
  id="main-menu"
  class="text-gray-800 w-full sticky top-0 z-50 border-b-2 shadow-md"
>
  <div
    class="flex flex-wrap items-center justify-between max-w-screen-xl mx-auto p-4"
  >
    <a
      href="/"
      class="flex items-center space-x-3 rtl:space-x-reverse"
      aria-label="Home"
    >
      <h1 class="text-3xl flex gap-3">
        <Logo custom_class="h-9 w-min" />
        <span class="hidden md:block">
          <strong>Lista</strong> de <strong>deseos</strong> .es
        </span>
      </h1>
    </a>
    <input hidden type="checkbox" id="expand-menu" class="peer" />
    <label for="expand-menu" class="md:hidden text-3xl peer-checked:hidden"
      >☰</label
    >
    <label
      for="expand-menu"
      class="md:hidden text-3xl hidden peer-checked:block">⤫</label
    >
    <div
      class="items-center justify-between hidden peer-checked:block w-full md:flex md:w-auto md:order-1 text-center"
    >
      <ul
        class="flex flex-col mt-4 font-medium md:flex-row md:mt-0 md:space-x-8 justify-center items-center"
      >
        <li>
          <a
            href="https://github.com/listadedeseos/listadedeseos-astro"
            class="p-2 md:p-0"
            aria-details="github"
            referrerpolicy="no-referrer"
            target="_blank"
          >
            <Icon
              name="fa:github"
              class="h-full transition hover:underline"
              title="Aporta código a nuestra comunidad"
            />
          </a>
        </li>
        <li>
          <a
            href="https://app.listadedeseos.es"
            class="block py-2 px-3 md:p-0 transition hover:underline"
            aria-current="page">Entrar</a
          >
        </li>
        <li>
          <a
            href="https://app.listadedeseos.es/register"
            class="block py-2 px-3 md:p-0 transition hover:underline"
            aria-current="page">Regístrate</a
          >
        </li>
      </ul>
    </div>
  </div>
</nav>

<style>
  @keyframes header-animation {
    from {
      max-width: 100%;
    }
    to {
      top: 1rem;
      width: calc(100% - 2rem);
      border-radius: 1.5rem;
      border: 0.1rem solid rgba(255, 255, 255);
      background-color: rgba(255, 255, 255, 0.7);
      backdrop-filter: blur(1rem);
      max-width: 64rem; /* max-w-5xl */
    }
  }
  #main-menu {
    animation: header-animation linear both;
    animation-timeline: scroll(root);
    animation-range: 0 200px;
  }
</style>
