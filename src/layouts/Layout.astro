---
import Header from "../components/Header.astro";
import GoogleAnalytics from "../components/GoogleAnalytics.astro";
import Footer from "../components/Footer.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <GoogleAnalytics />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Crea y comparte tu lista de deseos perfecta para cualquier ocasiÃ³n especial. Organiza tus regalos de manera sencilla y comparte con tus amigos y familiares."
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/svg/logo.svg" />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Baloo+2:wght@400..800&family=Concert+One&family=Righteous&family=Sora:wght@100..800&display=swap"
      rel="stylesheet"
    />

    <!-- Open Graph Meta Tags -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://listadedeseos.es" />
    <meta property="og:image" content="/svg/logo.svg" />
    <meta property="og:locale" content="es_ES" />
    <!-- Open Graph Meta Tags End -->
  </head>
  <body class="baloo2 bg-zinc-200 flex flex-col items-center min-h-screen">
    <Header />
    <main class="w-full">
      <slot />
    </main>
    <Footer />
    <script
      is:inline
      src="https://cdn.jsdelivr.net/npm/flowbite@2.5.2/dist/flowbite.min.js"
    ></script>
  </body>
</html>

<style>
  .baloo2 {
    font-family: "Baloo 2", sans-serif;
  }
</style>
